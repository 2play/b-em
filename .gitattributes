# Auto detect text files and perform LF normalisation.
* text=auto

# Text files.
*.am text
*.c text
*.cc text
*.cpp text
*.h text
*.hpp text
*.in text
*.m text
*.m4 text
*.mak text
*.md text
*.mm text
*.pl text
*.txt text
*.user text
COPYING text
README text
README.* text
configure text

# Binary files.
*.bin binary
*.dat binary
*.dll binary
*.exe binary
*.ico binary
*.snd binary
*.wav binary

# Misc.
*.bat text eol=crlf
*.dsp text eol=crlf
*.dsw text eol=crlf
*.rc text eol=crlf
*.sln text eol=crlf filter=utf8bom
*.vcproj text eol=crlf filter=utf8bom
*.vcxproj text eol=crlf filter=utf8bom
*.vcxproj.filters text eol=crlf filter=utf8bom

# BBC files.
